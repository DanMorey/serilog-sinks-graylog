{

    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Graylog" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information",
                "System": "Warning"
            }
        },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "Graylog",
                "Args": {
                    "hostnameOrAddress": "localhost",
                    "port": "12205",
                    "transportType": "Udp"
                }
            }
        ],
        "Properties": {
            "Application": "GraylogIssueDemo"
        }
    },

    "AllowedHosts": "*"
}